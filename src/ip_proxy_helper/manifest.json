{
  "manifest_version": 3,
  "name": "IP Proxy Helper",
  "version": "1.0",
  "description": "Manage proxies for Chrome instances with real-time monitoring",
  "permissions": ["proxy", "storage", "webRequest", "tabs", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["*.js", "*.html", "*.png"],
    "matches": ["<all_urls>"]
  }]
}